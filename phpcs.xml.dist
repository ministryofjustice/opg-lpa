<?xml version="1.0"?>
<ruleset name="Expressive Skeleton coding standard">
    <description>Expressive Skeleton coding standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength" />
    </rule>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Paths to check -->
    <file>/app</file>

    <!-- Exclude files generated by third parties -->
    <exclude-pattern>/app/service-api/db/*</exclude-pattern>
    <exclude-pattern>/app/service-front/build/twig-cache/*</exclude-pattern>

    <!-- Exclude vendor files -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
