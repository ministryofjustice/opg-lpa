{
    "name": "ministryofjustice/opg-lpa-shared",
    "description": "Code that is shared between the service-front, service-pdf, service-admin, service-api components of the Make An LPA service",
    "minimum-stability": "stable",
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "laminas/laminas-component-installer": true
        },
        "platform": {
            "php": "8.2"
        }
    },
    "require": {
        "php": ">=8.2 <8.3.0",
        "egulias/email-validator": "^4.0",
        "laminas/laminas-diactoros": "^3.0",
        "laminas/laminas-eventmanager": "^3.5",
        "monolog/monolog": "^3.9",
        "laminas/laminas-mvc": "^3.5",
        "symfony/validator": "^5.4"
    },
    "require-dev": {
        "hamcrest/hamcrest-php": "^2.0",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5.10",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "MakeShared\\": "module/MakeShared/src/",
            "MakeSharedTest\\": "module/MakeShared/tests/"
        }
    }
}
