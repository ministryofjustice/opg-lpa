{
    "name": "ministryofjustice/opg-lpa-shared",
    "description": "Code shared between the services for creating Lasting Power of Attorney PDF documents",
    "minimum-stability": "stable",
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "laminas/laminas-component-installer": true
        }
    },
    "require": {
        "php": "^8.1",
        "laminas/laminas-log": "^2.13",
        "laminas/laminas-eventmanager": "^3.5",
        "laminas/laminas-mvc": "^3.5",
        "symfony/validator": "^4.2",
        "egulias/email-validator": "~1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "vimeo/psalm": "^4.23"
    },
    "autoload": {
        "psr-4": {
            "MakeShared\\": "module/MakeShared/src/",
            "MakeSharedTest\\": "module/MakeShared/tests/"
        }
    }
}
