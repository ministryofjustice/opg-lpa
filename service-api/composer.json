{
    "name": "ministryofjustice/opg-lpa-api",
    "description": "API service for creating Lasting Power of Attorney PDF documents",
    "minimum-stability": "stable",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ministryofjustice/opg-lpa-datamodels",
            "no-api": true
        }
    ],
    "require": {
        "php": "^8.0",
        "aws/aws-sdk-php": "^3.0",
        "ministryofjustice/opg-lpa-datamodels": "^13.8",
        "laminas/laminas-authentication": "^2.5",
        "laminas/laminas-cache": "^2.7",
        "laminas/laminas-component-installer": "^2.4",
        "laminas/laminas-crypt": "^3.2",
        "laminas/laminas-filter": "^2.7",
        "laminas/laminas-math": "^3.0",
        "laminas/laminas-mvc": "^3.2",
        "laminas/laminas-mvc-i18n": "^1.0",
        "laminas/laminas-paginator": "^2.8",
        "laminas/laminas-zendframework-bridge": "^1.1.1",
        "laminas/laminas-log": "^2.12",
        "lm-commons/lmc-rbac-mvc":"^3.0",
        "laminas-api-tools/api-tools-api-problem": "^1.2",
        "php-http/guzzle6-adapter": "^1.1",
        "alphagov/notifications-php-client": "^1.6",
        "robmorgan/phinx": "^0.10.6",
        "laminas/laminas-db": "^2.9",
        "league/csv": "^9.0",
        "laminas/laminas-cli": "^1.1",
        "nategood/commando": "^0.4.0"
    },
    "replace": {
        "laminas/laminas-cache-storage-adapter-apc": "*",
        "laminas/laminas-cache-storage-adapter-apcu": "*",
        "laminas/laminas-cache-storage-adapter-blackhole": "*",
        "laminas/laminas-cache-storage-adapter-dba": "*",
        "laminas/laminas-cache-storage-adapter-ext-mongodb": "*",
        "laminas/laminas-cache-storage-adapter-memcache": "*",
        "laminas/laminas-cache-storage-adapter-memcached": "*",
        "laminas/laminas-cache-storage-adapter-mongodb": "*",
        "laminas/laminas-cache-storage-adapter-wincache": "*",
        "laminas/laminas-cache-storage-adapter-xcache": "*",
        "laminas/laminas-cache-storage-adapter-zend-server": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "module/Application/src/",
            "MakeLogger\\": "../shared/logging/module/MakeLogger/src/"
        }
    }
}
