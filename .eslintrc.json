{
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "requireConfigFile": false
  },

  "env": {
    "es2021": true,
    "browser": true
  },

  "extends": "plugin:prettier/recommended",

  "ignorePatterns": ["service-front/assets/js/opg/env-vars.template.js"],

  "rules": {
    "no-extra-semi": "off",
    "no-redeclare": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "no-useless-escape": "off",
    "prettier/prettier": "off"
  }
}
