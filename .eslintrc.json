{
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },

  "parser": "@babel/eslint-parser",

  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },

  "extends": "eslint:recommended",

  "ignorePatterns": ["service-front/assets/js/opg/env-vars.template.js"],

  "rules": {
    "no-extra-semi": "off",
    "no-redeclare": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-use-before-define": "off",
    "no-useless-escape": "off"
  }
}
