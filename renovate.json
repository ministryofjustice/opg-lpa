{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests"
  ],
  "branchPrefix": "renovate-",
  "labels": [
    "Renovate",
    "Dependencies"
  ],
  "ignoreDeps": [
    "php",
    "github.com/ministryofjustice/opg-terraform-aws-moj-ip-allow-list"
  ],
  "commitMessageAction": "Renovate update",
  "forkProcessing": "enabled",
  "lockFileMaintenance": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "groupName": "Security Alerts",
    "labels": [
      "Dependencies",
      "Renovate",
      "SecurityAlert"
    ],
    "dependencyDashboardApproval": false,
    "minimumReleaseAge": null,
    "rangeStrategy": "update-lockfile",
    "commitMessagePrefix": "[SECURITY]",
    "branchTopic": "{{{datasource}}}-{{{depName}}}-vulnerability",
    "prCreation": "immediate"
  },
  "prConcurrentLimit": 1,
  "prHourlyLimit": 1,
  "branchConcurrentLimit": 5,
  "enabledManagers": [
    "dockerfile",
    "docker-compose",
    "npm",
    "composer",
    "github-actions",
    "gomod",
    "terraform",
    "pip_requirements",
    "pip-compile",
    "pipenv",
    "pyenv",
    "setup-cfg",
    "pip_setup"
  ],
  "packageRules": [
    {
      "description": [
        "We are investigating replacing Grunt with esbuild (LPAL-1501) so ignore these major updates for now",
        "TODO: Review this decision from November 2025"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "npm"
      ],
      "matchDepNames": [
        "grunt-contrib-concat",
        "grunt-contrib-cssmin",
        "grunt-contrib-handlebars"
      ],
      "enabled": false
    },
    {
      "description": [
        "Lock versions of managed services",
        "Our local images need to match the managed services that we have in AWS"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchDepNames": [
        "redis",
        "postgres"
      ],
      "enabled": false
    },
    {
      "description": [
        "laminas-servicemanager network blockages",
        "None of these packages can be (major) upgraded until everything supports laminas-servicemanager v4",
        "Some of them do already support servicemanager v4, but Composer doesn't support multiple dependency versions",
        "robmorgan/phinx is include because it has a nested dependency on pst/simple-cache:^2.0, which requires laminas-cache v4"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchDatasources": [
        "packagist"
      ],
      "matchDepNames": [
        "laminas/laminas-servicemanager",
        "laminas/laminas-cache",
        "laminas/laminas-cache-storage-adapter-memory",
        "laminas/laminas-filter",
        "robmorgan/phinx"
      ],
      "enabled": false
    },
    {
      "description": [
        "cypress: bundle updates to package.json and dockerfile",
        "allow major version updates"
      ],
      "labels": [
        "devDependencies",
        "Renovate",
        "Cypress"
      ],
      "groupName": "Cypress",
      "matchUpdateTypes": [
        "major"
      ],
      "matchManagers": [
        "dockerfile",
        "npm"
      ],
      "matchPackageNames": [
        "/cypress/",
        "/locust/"
      ]
    },
    {
      "description": [
        "dev tools: allow major updates only for dev tools and aws-sdk",
        "note: this may fail if other packages depend on existing versions"
      ],
      "labels": [
        "devDependencies",
        "Renovate",
        "DevTools"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchPackageNames": [
        "vimeo/psalm",
        "phpunit/phpunit",
        "aws/aws-sdk-php"
      ]
    },
    {
      "description": [
        "Github Actions: bundle all updates together"
      ],
      "labels": [
        "devDependencies",
        "Renovate",
        "GithubActions"
      ],
      "groupName": "Github Actions",
      "automerge": true,
      "schedule": [
        "after 6am and before 9am on Monday"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "minimumReleaseAge": "3 days",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "description": [
        "Terraform: bundle all updates together"
      ],
      "labels": [
        "devDependencies",
        "Renovate",
        "Terraform"
      ],
      "groupName": "Terraform",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchManagers": [
        "terraform"
      ]
    },
    {
      "description": [
        "No updates to postgres, redis, php or python docker images",
        "postgres: keep in sync with live",
        "redis: keep in sync with live",
        "php: upgrade needs to be managed manually"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchManagers": [
        "dockerfile",
        "docker-compose",
        "composer"
      ],
      "matchPackageNames": [
        "postgres",
        "redis",
        "php",
        "python"
      ],
      "enabled": false
    },
    {
      "description": [
        "No updates to PHP PDF libraries (too sensitive and risky)"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchPackageNames": [
        "tecnickcom/tcpdf",
        "mikehaertl/php-pdftk"
      ],
      "enabled": false
    },
    {
      "description": [
        "No major version updates except for dev tools"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchPackageNames": [
        "vimeo/psalm",
        "phpunit/phpunit",
        "/cypress/",
        "/locust/"
      ],
      "enabled": false
    },
    {
      "description": [
        "admin composer minor and patch updates (PHP, stable for 3 days)",
        "These might be automerged once we're comfortable with Renovate"
      ],
      "automerge": false,
      "groupName": "admin minor and patch updates (PHP)",
      "groupSlug": "admin-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "service-admin/composer.json"
      ],
      "prCreation": "immediate",
      "prPriority": 4,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": [
        "front composer minor and patch updates (PHP, stable for 3 days)",
        "These might be automerged once we're comfortable with Renovate"
      ],
      "automerge": false,
      "groupName": "front minor and patch updates (PHP)",
      "groupSlug": "front-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "service-front/composer.json"
      ],
      "prCreation": "immediate",
      "prPriority": 4,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": [
        "api composer minor and patch updates (PHP, stable for 3 days)",
        "These might be automerged once we're comfortable with Renovate"
      ],
      "automerge": false,
      "groupName": "api minor and patch updates (PHP)",
      "groupSlug": "api-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "service-api/composer.json"
      ],
      "prCreation": "immediate",
      "prPriority": 4,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": [
        "pdf composer minor and patch updates (PHP, stable for 3 days)",
        "These might be automerged once we're comfortable with Renovate"
      ],
      "automerge": false,
      "groupName": "pdf minor and patch updates (PHP)",
      "groupSlug": "pdf-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "service-pdf/composer.json"
      ],
      "prCreation": "immediate",
      "prPriority": 4,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": [
        "shared composer minor and patch updates (PHP, stable for 3 days)",
        "These might be automerged once we're comfortable with Renovate"
      ],
      "automerge": false,
      "groupName": "shared minor and patch updates (PHP)",
      "groupSlug": "shared-minor-patch-updates-php",
      "labels": [
        "Dependencies",
        "Renovate",
        "PHP"
      ],
      "matchManagers": [
        "composer"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "shared/composer.json"
      ],
      "prCreation": "immediate",
      "prPriority": 4,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": [
        "npm minor and patch updates (stable for 3 days)",
        "These might be automerged once we're comfortable with Renovate"
      ],
      "automerge": false,
      "groupName": "minor and patch updates (npm)",
      "groupSlug": "all-minor-patch-updates-npm",
      "labels": [
        "Dependencies",
        "Renovate",
        "nodejs"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "package.json",
        "service-front/package.json"
      ],
      "prCreation": "immediate",
      "prPriority": 4,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": [
        "python minor and patch updates (stable for 3 days)"
      ],
      "automerge": false,
      "groupName": "minor and patch updates (Python)",
      "groupSlug": "all-minor-patch-updates-python",
      "labels": [
        "Dependencies",
        "Renovate"
      ],
      "matchManagers": [
        "pip_requirements",
        "pip-compile",
        "pipenv",
        "pyenv",
        "setup-cfg",
        "pip_setup"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "prCreation": "immediate",
      "prPriority": 4,
      "minimumReleaseAge": "3 days"
    }
  ]
}
