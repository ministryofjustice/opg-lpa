{
  "name": "alphagov/pay-php-client",
  "description": "PHP client for GOV.UK Pay",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Neil Smith",
      "email": "neil@nsmith.net"
    }
  ],
  "require": {
    "php": ">=5.4",
    "psr/http-message": "^1.0",
    "php-http/httplug": "^1.0",
    "guzzlehttp/psr7" : "^1.2",
    "php-http/client-implementation": "^1.0"
  },
  "require-dev": {
    "phpspec/phpspec": "^2.0",
    "php-http/message": "^1.1",
    "php-http/curl-client": "*",
    "php-http/mock-client": "*",
    "php-http/socket-client": "*",
    "php-http/guzzle6-adapter": "*"
  },
  "suggest": {
    "ext-curl": "To send requests using cURL"
  },
  "autoload": {
    "psr-4": {
      "Alphagov\\Pay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Alphagov\\PayTests\\": "tests/"
    }
  }
}
