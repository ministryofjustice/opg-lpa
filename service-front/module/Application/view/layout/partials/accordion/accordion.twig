{% import "layout/partials/accordion/macros.twig" as macros %}

{% for item in items %}

	{% if (item.routeName == 'lpa/form-type') %}
        {{ macros.accordionBar({
        		'desktop' : (lpa.document.type == 'property-and-financial') ?
        					'This LPA covers property and financial affairs' :
        					'This LPA covers health and welfare',
        		'mobile' : (lpa.document.type == 'property-and-financial') ?
        					'This LPA covers property and financial affairs' :
        					'This LPA covers health and welfare',
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
	{% if (item.routeName == 'lpa/donor') %}
        {{ macros.accordionBar({
            	'desktop' : 'The donor is ' ~ item.params.values,
            	'mobile' : 'The donor is ' ~ item.params.values,
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
	{% if (item.routeName == 'lpa/life-sustaining') %}
        {{ macros.accordionBar({
            	'desktop' : item.params.values == 1 ? 'The attorneys can make decisions about life-sustaining treatment on the donor\'s behalf' : 'The attorneys can\'t make decisions about life-sustaining treatment on the donor\'s behalf', 
            	'mobile' : item.params.values == 1 ? 'The attorneys can make decisions about life-sustaining treatment on the donor\'s behalf' : 'The attorneys can\'t make decisions about life-sustaining treatment on the donor\'s behalf',
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
    {% if (item.routeName == 'lpa/primary-attorney') %}
        {{ macros.accordionBar({
            	'desktop' : 'The attorney' ~ (item.params.count != 1 ? 's are ' : ' is ') ~ item.params.values,
            	'mobile' :  'The attorney' ~ (item.params.count != 1 ? 's are ' : ' is ') ~ item.params.values,
        		'status' : item.params.count ~ ' Attorney' ~ (item.params.count != 1 ? 's' : ''),
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
    {% if (item.routeName == 'lpa/when-lpa-starts') %}
        {{ macros.accordionBar({
                'desktop' : 'The LPA starts ' ~ (item.params.values == 'now' ? 'as soon as it\'s registered (with my consent)' : 'only if I don\'t have mental capacity'),
                'mobile' : 'The LPA starts ' ~ (item.params.values == 'now' ? 'as soon as it\'s registered (with my consent)' : 'only if I don\'t have mental capacity'),
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}

    {% if (item.routeName == 'lpa/how-primary-attorneys-make-decision') %}
        {{ macros.accordionBar({
            	'desktop' : 'The attorneys will act ' ~ ( item.params.values == 'jointly-attorney-severally' ? 'jointly and severally' : ((item.params.values == 'jointly' ) ? 'jointly' : 'jointly for some decisions, and jointly and severally for other decisions')), 
            	'mobile' : 'The attorneys will act ' ~ ( item.params.values == 'jointly-attorney-severally' ? 'jointly and severally' : ((item.params.values == 'jointly' ) ? 'jointly' : 'jointly for some decisions, and jointly and severally for other decisions')),
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
    {% if (item.routeName == 'lpa/replacement-attorney') %}
        {{ macros.accordionBar({
            	'desktop' : item.params.count == 0 ? 'There are no replacement attorneys' : ('The replacement attorney' ~ (item.params.count != 1 ? 's are ' : ' is ') ~ item.params.values),
            	'mobile' : item.params.count == 0 ? 'There are no replacement attorneys' : ('The replacement attorney' ~ (item.params.count != 1 ? 's are ' : ' is ') ~ item.params.values),
        		'status' : item.params.count ~ ' Replacement attorney' ~ (item.params.count != 1 ? 's' : ''),
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}

    {% if (item.routeName == 'lpa/when-replacement-attorney-step-in') %}
        {{ macros.accordionBar({
            	'desktop' : 'The replacement attorneys will step in ' ~ ( item.params.values == 'first' ? 'as soon as one of the original attorneys can no longer act' : ((item.params.values == 'last' ) ? 'as soon as none of the original attorneys can act' : 'as per instructions')),
            	'mobile' : 'The replacement attorneys will step in ' ~ ( item.params.values == 'first' ? 'as soon as one of the original attorneys can no longer act' : ((item.params.values == 'last' ) ? 'as soon as none of the original attorneys can act' : 'as per instructions')),
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
    {% if (item.routeName == 'lpa/how-replacement-attorneys-make-decision') %}
        {{ macros.accordionBar({
            	'desktop' : 'The replacement attorneys will act ' ~ ( item.params.values == 'jointly-attorney-severally' ? 'jointly and severally' : ((item.params.values == 'jointly' ) ? 'jointly' : 'jointly for some decisions, and jointly and severally for other decisions')), 
            	'mobile' : 'The replacement attorneys will act ' ~ ( item.params.values == 'jointly-attorney-severally' ? 'jointly and severally' : ((item.params.values == 'jointly' ) ? 'jointly' : 'jointly for some decisions, and jointly and severally for other decisions')),
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
    {% if (item.routeName == 'lpa/certificate-provider') %}
        {{ macros.accordionBar({
            	'desktop' : 'The certificate provider is ' ~ item.params.values, 
            	'mobile' : 'The certificate provider is ' ~ item.params.values,
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
    {% if (item.routeName == 'lpa/people-to-notify') %}
        {{ macros.accordionBar({
            	'desktop' : item.params.count == 0 ? 'There are no people to notify' : ('The ' ~ (item.params.count != 1 ? 'people to notify are ' : 'person to notify is ') ~ item.params.values),
            	'mobile' : item.params.count == 0 ? 'There are no people to notify' : ('The ' ~ (item.params.count != 1 ? 'people to notify are ' : 'person to notify is ') ~ item.params.values),
        		'status' : item.params.count ~ (item.params.count != 1 ? ' people to notify' : ' person to notify'),
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
    
    {% if (item.routeName == 'lpa/instructions') %}
        {{ macros.accordionBar({
            	'desktop' : item.params.values, 
            	'mobile' : item.params.values,
        		'status' : item.params.status,
        		'edit' : url(item.routeName, {'lpa-id': lpa.id})
        	})
        }}
    {% endif %}
{% endfor %}

