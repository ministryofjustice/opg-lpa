{% extends isPopup ? 'layout/popup.twig' : 'layout/layout.twig' %}

{%- set pageTitle = 'Delete an LPA' -%}

{% block content %}

<header class="popup-header">
    <i class="icon icon-bin"></i>
    <h2 class="heading-small popup-header-title">Are you sure you want to delete this?</h2>
</header>

<div class="form">
    <h2 class="heading-medium">
        {% if lpa.document.donor.name is defined %}
            {{ lpa.document.donor.name }}
        {% else %}
            No donor added
        {% endif %}
    </h2>
    <p>{{ formatLpaId(lpa.id) }}</p>
    <p>This will only delete the information on this website. It will not delete any LPA application you've sent to OPG already, or any registered LPA.</p>
    <a href="/user/dashboard/delete-lpa/{{ lpa.id }}{% if page > 1 %}?page={{ page }}{% endif %}" data-cy="delete" class="button button-warning flush--left">Delete</a>
    <a href="/user/dashboard" data-cy="cancel" class="button button-secondary js-cancel">Cancel</a>
</div>

{% endblock %}
