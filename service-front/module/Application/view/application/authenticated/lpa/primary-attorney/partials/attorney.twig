<li>
    <div class="person">
        <h3 class="person-name heading-small flush--ends">{{ attorney['name'] }}</h3>
        <p class="person-address flush--ends">{{ attorney['address'] }}</p>
        <ul class="person-actions">
            <li class="action-item">
                <a href="{{ confirmDeleteUrl }}" class="action-delete js-form-popup" aria-label="Delete Attorney {{ attorney['name'] }}">Delete<span class="visually-hidden"> Attorney {{ attorney['name'] }}</span></a>
            </li>
            <li class="action-item">
                <a href="{{ editUrl }}" role="button" class="action-edit js-form-popup" aria-label="View/Change Attorney {{ attorney['name'] }}">View/Change<span class="visually-hidden"> Attorney {{ attorney['name'] }}</span></a>
            </li>
        </ul>
    </div>
</li>
