{% extends 'layout/twig/layout.twig' %}

{% block errorSummary %}
    {% include 'application/auth/partials/error-summary.twig' %}
{% endblock %}

{% block pageTitle %}
    Sign in
{% endblock %}

{% block content %}

{# Set form fields variables #}
{% set email = form.get('email') %}
{% set password = form.get('password') %}

{# form fields config #}
{{ email.setAttributes({
    id: 'email',
    class: 'form-control'
}) ? ''}}

{{ password.setAttributes({
    id: 'password_current',
    class: 'form-control'
}) ? '' }}

{# form fields labels #}
{{ email.setOptions({ label: 'Email address' }) ? '' }}
{{ password.setOptions( { label: 'Password' }) ? '' }}

<p>Sign in or <a href="{{ url('register') }}">create an account</a> to get started.</p>

{{ systemMessage() }}

{# begin form #}
{{ form.prepare() ? '' }}
{{ form().openTag( form )|raw }}
    {{ formElement(form.get( form.csrfName )) }}

    <fieldset>
        <legend class="visuallyhidden">Sign in</legend>

        <div class="form-group {{ email.getMessages|length >0 ? 'error'}}">
            <label class="form-label" for="{{ email.getAttribute('id') }}">
                {{ email.getOption('label') }}
                {{ formElementErrorsV2(email) }}
            </label>
            {{ formElement(email) }}
        </div>

        <div class="form-group {{ password.getMessages|length >0 ? 'error'}}">
            <label class="form-label" for="{{ password.getAttribute('id') }}">
                {{ password.getOption('label') }}
                {{ formElementErrorsV2(password) }}
            </label>
            {{ formElement(password) }}
        </div>

        <div class="form-group">
            <input type="submit" name="submit" id="signin-form-submit" value="Sign in" class="button">
        </div>

    </fieldset>

{{ form().closeTag|raw }}

<p>
    <a href="{{ url('forgot-password') }}">Forgotten your password?</a>
</p>

{% endblock content %}